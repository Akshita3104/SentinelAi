{
  "name": "sentinel-ai-backend",
  "version": "2.1.0",
  "description": "Backend for Sentinel AI - AI-Driven DDoS Detection System with Real-time Packet Analysis",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "NODE_ENV=development nodemon --inspect server.js",
    "debug": "NODE_OPTIONS='--inspect' NODE_ENV=development nodemon server.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "security-check": "npm audit --production",
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{js,json,md}\""
  },
  "keywords": [
    "ddos",
    "ai",
    "cybersecurity",
    "5g",
    "websocket",
    "machine-learning",
    "network-security",
    "packet-analysis",
    "real-time",
    "intrusion-detection"
  ],
  "author": "Sentinel AI Team",
  "license": "MIT",
  "dependencies": {
    "@fast-csv/parse": "^4.3.6",
    "@sentry/node": "^7.28.0",
    "@sentry/tracing": "^7.28.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.1",
    "helmet": "^6.0.1",
    "http-status-codes": "^2.2.0",
    "joi": "^17.8.3",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "pino": "^8.9.0",
    "pino-pretty": "^9.4.0",
    "uuid": "^9.0.1",
    "winston": "^3.8.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.20.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.13.0",
    "@types/ws": "^8.5.4",
    "babel-jest": "^29.4.1",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.3",
    "jest": "^29.4.1",
    "lint-staged": "^13.1.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/tests/**"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
