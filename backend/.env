# ======================
# Server Configuration
# ======================
NODE_ENV=development
PORT=8080
HOST=0.0.0.0

# ======================
# WebSocket Configuration
# ======================
WS_PATH=/ws
WS_MODEL_PATH=/model
WS_PACKET_CAPTURE_PATH=/packet-capture

# ======================
# Model Service
# ======================
MODEL_TRAINING_EPOCHS=50
MODEL_BATCH_SIZE=32
MODEL_LEARNING_RATE=0.001
MODEL_VALIDATION_SPLIT=0.2
MODEL_SAVE_PATH=./models

# ======================
# Network Configuration
# ======================
# Network interface to capture from (use 'None' to auto-detect)
NETWORK_INTERFACE=None

# Filter for packet capture (BPF syntax)
# Example: "tcp port 80 or tcp port 443"
PACKET_FILTER="tcp or udp or icmp"

# Max packets to keep in memory
MAX_PACKETS=1000

# ======================
# Security
# ======================
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=15*60*1000 # 15 minutes
RATE_LIMIT_MAX=100 # limit each IP to 100 requests per window

# ======================
# Logging
# ======================
# Log level (error, warn, info, http, verbose, debug, silly)
LOG_LEVEL=debug
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14d
