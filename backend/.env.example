# Server Configuration
NODE_ENV=development
PORT=8080
HOST=0.0.0.0

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14d

# WebSocket Configuration
WEBSOCKET_PATH=/ws
WEBSOCKET_PING_INTERVAL=30000
WEBSOCKET_MAX_PAYLOAD=10485760  # 10MB

# Packet Capture
TSHARK_PATH=  # Auto-detect if empty
CAPTURE_INTERFACE=eth0  # Default interface
CAPTURE_FILTER=  # BPF filter
CAPTURE_SNAPLEN=65535
CAPTURE_BUFFER_SIZE=1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Security
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
REFRESH_TOKEN_EXPIRES_IN=7d

# Sentry (Error Tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Model Service
MODEL_SERVICE_URL=http://localhost:5000
MODEL_SERVICE_TIMEOUT=30000  # 30 seconds

# Redis (for rate limiting and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Database (MongoDB)
MONGODB_URI=mongodb://localhost:27017/sentinelai
MONGODB_DEBUG=false

# API Keys (if any)
VIRUSTOTAL_API_KEY=
ABUSEIPDB_API_KEY=
